<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="ResourceName">
    <com.ogaclejapan.smarttablayout.SmartTabLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dialog_tabs"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorWithoutPadding="true"
        app:stl_indicatorInFront="false"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorColor="?attr/colorAccent"
        app:stl_indicatorThickness="5.0dp"
        app:stl_indicatorWidth="auto"
        app:stl_underlineColor="#B5B5B5"
        app:stl_underlineThickness="0.5dp"
        app:stl_dividerColor="?attr/colorAccent"
        app:stl_dividerThickness="0.6dp"
        app:stl_distributeEvenly="true"
        app:stl_customTabTextLayoutId="@layout/fragment_dialog_tab"
        app:stl_customTabTextViewId="@id/tab_text"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/dialog_pagers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>